{
  "root": "dist",
  "clean_urls": true,
  "routes": {
    "/**": "/index.html"
  },
  "https_only": true,
  "headers": {
    "/**": {
      "Cache-Control": "no-cache, no-store, must-revalidate",
      "Pragma": "no-cache",
      "Expires": 0,
      "X-Content-Type-Options": "nosniff"
    },
    "/assets/**": {
      "Cache-Control": "public, max-age=31536000, immutable"
    }
  },
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
